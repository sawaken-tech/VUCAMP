= render 'top/loading'

= render 'top/header'

.vucamp
  .vucamp__main
    .vucamp__main__camp
      - @random.each do |camp|
        .vucamp__main__camp__img
          - camp.images.each do |image|
            = image_tag image.image.to_s
        .vucamp__main__camp__infobox
          .vucamp__main__camp__infobox__name
            = camp.campName
          .vucamp__main__camp__infobox__address
            = camp.address
          .vucamp__main__camp__infobox__capacity
            おすすめ人数：
            = camp.capacity
          .vucamp__main__camp__infobox__price
            価格：
            = camp.price
          .vucamp__main__camp__infobox__level
            キャンプ難易度：
            = camp.level
          .vucamp__main__camp__infobox__workHour
            営業時間：
            = camp.checkin
            = camp.checkout
          .vucamp__main__camp__infobox__nearStore
            近くのスーパー：
            - camp.nearStores.each do |store|
              = store.storeName

          .vucamp__main__camp__infobox__gmap
            = render 'maps/map'

  .vucamp__under
    .vucamp__under__btnbox
      = link_to root_path do
        .vucamp__under__btnbox__return
          TOPへ
= render 'top/footer'